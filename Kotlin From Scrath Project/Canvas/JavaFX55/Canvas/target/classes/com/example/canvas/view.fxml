<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.canvas.Controller"> <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
</padding>

    <Label text="Vẽ Hình Chữ Nhật trên JavaFX Canvas"/>

    <Canvas fx:id="drawingCanvas" width="400" height="300" style="-fx-border-color: #3b82f6; -fx-border-width: 2; -fx-background-color: #ffffff; -fx-border-radius: 12;"/>

    <Button text="Vẽ Hình Chữ Nhật" onAction="#drawRectangleOnCanvas"/>
</VBox>
